{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "typeRoots": ["node_modules/@types", "./types"],
      "types": ["node"],
    },
    "include": ["src/**/*",],
    "exclude": ["node_modules", "dist"]
  }